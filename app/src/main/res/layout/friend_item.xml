<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/friend_item"
    android:background="#FFF">
    <TextView
        android:id="@+id/dialog_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/default_blue"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"/>
    <RelativeLayout
        android:id="@+id/hide"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:visibility="invisible"
        android:background="@drawable/round_corner_blue_hallow">
        <TextView
            android:id="@+id/hide_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hide"
            android:textColor="@color/colorPrimary"
            android:layout_centerInParent="true"/>
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/unhide"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round_corner_blue_fill">
        <TextView
            android:id="@+id/unhide_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unhide"
            android:textColor="#FFF"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>