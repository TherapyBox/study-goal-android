<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/parent"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#b6cdef">

    <TextView
        android:id="@+id/pin_text_edit"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="4328"
        android:textSize="45sp"
        android:gravity="center"
        android:textColor="#f28500"
        android:background="#464646"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_below="@+id/pin_text_edit"
        android:layout_above="@+id/pin_send_button"
        >
        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/grid_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:columnCount="3"
                    android:layout_centerInParent="true"
                    android:rowCount="4"
                    android:orientation="horizontal" >

            <TextView android:text="1"
                      android:layout_width="90dp"
                      android:layout_height="70dp"
                      android:textAlignment="center"
                      android:gravity="center"
                      android:textColor="#a47cea"
                      android:textSize="50sp"
                />

            <TextView android:text="2"
                      android:layout_width="90dp"
                      android:layout_height="70dp"
                      android:textAlignment="center"
                      android:gravity="center"
                      android:textColor="#a47cea"
                      android:textSize="50sp"
                />

            <TextView android:text="3"
                      android:layout_width="90dp"
                      android:layout_height="70dp"
                      android:textAlignment="center"
                      android:gravity="center"
                      android:textColor="#a47cea"
                      android:textSize="50sp"
                />

            <TextView android:text="4"
                      android:layout_width="90dp"
                      android:layout_height="70dp"
                      android:textAlignment="center"
                      android:gravity="center"
                      android:textColor="#a47cea"
                      android:textSize="50sp"
                />

            <TextView android:text="5"
                      android:layout_width="90dp"
                      android:layout_height="70dp"
                      android:textAlignment="center"
                      android:gravity="center"
                      android:textColor="#a47cea"
                      android:textSize="50sp"
                />

            <TextView android:text="6"
                      android:layout_width="90dp"
                      android:layout_height="70dp"
                      android:textAlignment="center"
                      android:gravity="center"
                      android:textColor="#a47cea"
                      android:textSize="50sp"
                />

            <TextView android:text="7"
                      android:layout_width="90dp"
                      android:layout_height="70dp"
                      android:textAlignment="center"
                      android:gravity="center"
                      android:textColor="#a47cea"
                      android:textSize="50sp"
                />

            <TextView android:text="8"
                      android:layout_width="90dp"
                      android:layout_height="70dp"
                      android:textAlignment="center"
                      android:gravity="center"
                      android:textColor="#a47cea"
                      android:textSize="50sp"
                />

            <TextView android:text="9"
                      android:layout_width="90dp"
                      android:layout_height="70dp"
                      android:textAlignment="center"
                      android:gravity="center"
                      android:textColor="#a47cea"
                      android:textSize="50sp"
                />

            <TextView android:text="0"
                      android:layout_width="90dp"
                      android:layout_height="70dp"
                      android:textAlignment="center"
                      android:gravity="center"
                      android:textColor="#a47cea"
                      android:textSize="50sp"
                      android:layout_column="1"
                />

            <ImageView
                android:id="@+id/grid_backspace"
                      android:layout_width="90dp"
                      android:layout_height="70dp"
                      android:padding="15dp"
                      android:src="@drawable/backspace"
                      />

        </GridLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/pin_send_button"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/send_pin_title"
        android:gravity="center"
        android:textSize="18sp"
        android:background="#a47cea"
        android:textColor="@android:color/white"
        />

</RelativeLayout>