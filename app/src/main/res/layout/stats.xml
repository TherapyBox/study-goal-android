<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:text="@string/course_engagement"/>
        <RelativeLayout
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_toStartOf="@+id/next">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:tint="@color/light_grey"
                android:src="@drawable/arrow_left"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/next"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/arrow_right"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e1e4e8"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/stats_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--<ScrollView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent">-->
            <LinearLayout
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF">
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    card_view:cardElevation="2dp"
                    card_view:cardCornerRadius="2dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/this_week_layout"
                            android:background="@color/pink">
                            <RelativeLayout
                                android:id="@+id/stats1"
                                android:layout_width="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/first_table_image"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toEndOf="@+id/stats1">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_centerInParent="true"
                                    android:layout_marginEnd="10dp"
                                    android:gravity="end">
                                    <TextView
                                        android:id="@+id/first_table_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="20sp"
                                        android:textColor="#FFF"/>
                                    <TextView
                                        android:id="@+id/first_table_description"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="18sp"
                                        android:textColor="#FFF"
                                        android:layout_marginTop="10dp"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/this_week_layout"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true">
                            <TextView
                                android:id="@+id/this_week"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textColor="@color/pink"
                                android:textSize="18sp"
                                android:layout_marginStart="10dp"
                                android:text="@string/this_week"/>
                            <RelativeLayout
                                android:id="@+id/share"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true">
                                <ImageView
                                    android:tint="@color/pink"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/share"/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    card_view:cardElevation="2dp"
                    card_view:cardCornerRadius="2dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/overall_layout"
                            android:background="@color/pink">
                            <RelativeLayout
                                android:id="@+id/stats2"
                                android:layout_width="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/second_table_image"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toEndOf="@+id/stats2">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_centerInParent="true"
                                    android:layout_marginEnd="10dp"
                                    android:gravity="end">
                                    <TextView
                                        android:id="@+id/second_table_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="20sp"
                                        android:textColor="#FFF"/>
                                    <TextView
                                        android:id="@+id/second_table_description"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="18sp"
                                        android:textColor="#FFF"
                                        android:layout_marginTop="10dp"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/overall_layout"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true">
                            <TextView
                                android:id="@+id/overall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textColor="@color/pink"
                                android:textSize="18sp"
                                android:layout_marginStart="10dp"
                                android:text="@string/overall"/>
                            <RelativeLayout
                                android:id="@+id/share2"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true">
                                <ImageView
                                    android:tint="@color/pink"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/share"/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    card_view:cardElevation="2dp"
                    card_view:cardCornerRadius="2dp">
                    <RelativeLayout
                        android:id="@+id/graph"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <RelativeLayout
                            android:id="@+id/graph_img"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true">
                            <ImageView
                                android:tint="@color/pink"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/overall"/>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/graphs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_centerInParent="true"
                            android:text="@string/graphs"/>
                        <RelativeLayout
                            android:id="@+id/graphs_next"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/arrow_right"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#e1e4e8"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    card_view:cardElevation="2dp"
                    card_view:cardCornerRadius="2dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:id="@+id/attainment_bar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/attainment"
                                android:layout_width="wrap_content"
                                android:layout_height="49dp"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:textColor="@color/colorPrimary"
                                android:layout_centerInParent="true"
                                android:text="@string/attainment"/>
                            <TextView
                                android:id="@+id/attainment_info"
                                android:layout_below="@id/attainment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:textColor="#000000"
                                android:textSize="14sp"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#e1e4e8"
                                android:layout_below="@+id/attainment_info"/>
                        </RelativeLayout>
                        <ListView
                            android:id="@+id/list"
                            android:layout_below="@+id/attainment_bar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        <!--</ScrollView>-->
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>