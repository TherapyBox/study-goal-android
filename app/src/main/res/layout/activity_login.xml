<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/activity_login"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
        android:id="@+id/login_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/tmp_login_background"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mini_logo2"/>

        <TextView
            android:id="@+id/activity_login_demo_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/demo_mode"
            android:textColor="#FFF"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/activity_login_choose_institution_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_your_institute"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:layout_gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/round_corners"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <ImageView
                android:id="@+id/activity_login_institution_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/institution_icon"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/appCompatTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/activity_login_institution_icon"
                style="@style/AppSpinner"/>
            <RelativeLayout
                android:id="@+id/activity_login_institution_spinner_over"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"
                android:background="#F7F7F7"
                android:layout_toEndOf="@+id/activity_login_institution_icon">
                <TextView
                    android:id="@+id/choose_institution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColorHint="@color/text_hint_color"
                    android:textColor="@color/dark_grey"
                    android:hint="@string/tap_to_select"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <CheckBox
            android:id="@+id/choose_staff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="@string/login_imastaff_member"
            android:buttonTint="#ffffff"
            android:textColor="#ffffff"/>
        <CheckBox
            android:id="@+id/choose_keeplogged"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="@string/login_keeplogged"
            android:buttonTint="#ffffff"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/institutions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:visibility="invisible"
        android:background="@drawable/round_corners_transparent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/round_corner_grey_hallow">
            <RelativeLayout
                android:id="@+id/inst"
                android:layout_width="40dp"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/institution_icon"/>
            </RelativeLayout>
            <EditText
                android:id="@+id/search_field"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toStartOf="@+id/close"
                android:layout_toEndOf="@+id/inst"
                android:hint="@string/search"
                android:textColor="@color/dark_grey"
                android:textColorHint="@color/light_grey"
                android:background="@android:color/transparent"
                android:maxLines="1" />
            <RelativeLayout
                android:id="@+id/close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/close"/>
            </RelativeLayout>
        </RelativeLayout>
        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/blackout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="#88000000">
    </RelativeLayout>
    <WebView
        android:id="@+id/webview"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>