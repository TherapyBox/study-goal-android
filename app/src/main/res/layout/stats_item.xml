<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:weightSum="10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:background="@color/pink">
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/stats1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/engagement_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#FFF"
                        android:text="Very High Engagement"/>
                    <TextView
                        android:id="@+id/engagement_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#FFF"
                        android:layout_marginTop="10dp"
                        android:text="You are in the top 10%"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/this_week_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <TextView
            android:id="@+id/this_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/pink"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:text="@string/this_week"/>
        <RelativeLayout
            android:id="@+id/share"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true">
            <ImageView
                android:tint="@color/pink"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/share"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>